<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title><%= pageTitle %> -LodgeEasy</title>

 <%- include('partials/headerIcon')%>
  <link rel="stylesheet" href="/output.css"/>
  
</head>

<body class="bg-gray-50 min-h-screen">
  
  <%- include('partials/nav')%>
  <!-- Header Section -->
   <div class="w-full py-12">
    <div class="max-w-6xl mx-auto px-2 sm:px-6 flex flex-col sm:flex-row items-start sm:items-center">
        <div class="w-32 sm:w-40 flex-shrink-0 mb-4 sm:mb-0">
        
    <img src="../uploads/LodgeEasy.png" alt="LodgeEasy" class="w-full h-auto">
  </div>

  <!-- Right: Headings -->
  <div class="flex-1 text-center">
    <h1 class="text-4xl font-bold text-gray-800">
      Welcome to LodgeEasy
    </h1>
    <h2 class="text-lg text-gray-600 mt-2">
      <!-- A platform providing seamless lodging facilities -->
       Your hassle-free lodging companion
    </h2>
  </div>
  
</div>  
</div>


  <!-- serachbar-->
  <div class="w-full flex justify-center mt-10 px-4">
    <form action="/search-results" method="GET" class="w-full sm:max-w-10/12 md:w-2/3 lg:w-1/2 bg-white rounded-2xl shadow-md px-4 sm:px-6 py-4">
      <div class="flex flex-col sm:flex-row items-center gap-3 sm:gap-4">

        <!-- City -->
        <div class="flex-1 w-full">
          <label class="text-xs font-semibold text-gray-600 block mb-1">City</label>
          <input 
            type="text" 
            name="city"
            placeholder="Enter city"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 focus:bg-white  focus:border focus:border-indigo-500 transition outline-none"
          />
        </div>

        <!-- Check-in -->
        <div class="flex-1 w-full">
          <label class="text-xs font-semibold text-gray-600 block mb-1">Check-in</label>
          <input 
            type="date"
            name="checkIn"
            class="w-full px-4 py-2 rounded-lg bg-gray-100 focus:bg-white  focus:border focus:border-indigo-500 transition outline-none"
          />
        </div>

        <!-- Guests -->
        <div class="flex-1 w-full">
          <label class="text-xs font-semibold text-gray-600 block mb-1">Guests</label>
          <input 
            type="number" 
            min="1" 
            name="guests"
            placeholder="Guests"
           class="w-full px-4 py-2 rounded-lg bg-gray-100 focus:bg-white  focus:border focus:border-indigo-500 transition outline-none"
          />
        </div>

        <!-- Search Button -->
        <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-semibold transition w-full sm:w-auto">
          Search
        </button>
      </div>
    </form>
  </div>
</div>

  <!-- Registered Homes Section -->
    <div class="max-w-6xl mx-auto px-4 py-10">
      <h2 class="text-xl text-gray-600 mb-8">Here are our registered homes</h2>

      <div id="workarea">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
          <% registeredHomes.forEach(home=> { %>
            <div  class="max-w-sm mx-auto sm:max-w-none sm:mx-0 bg-white rounded-xl shadow-lg overflow-hidden flex flex-col hover:shadow-2xl transition-shadow duration-300">
              <img src="<%= home.imageURL %>" alt="<%= home.name %>" class="h-48 w-full object-cover" />
              <div class="p-5 flex-1 flex flex-col">
                <h3 class="text-lg font-semibold text-gray-800 mb-1">
                  <%= home.name %>
                </h3>
                <p class="text-sm text-gray-500 mb-2">
                  <%= home.city %>
                </p>
                <!-- <p class="text-base text-gray-700 mb-4 flex-1"><%= home.description %></p> -->
                <div class="flex items-center justify-between mb-4">
                  <span class="text-indigo-600 font-bold text-lg">â‚¹<%= home.price %></span>
                </div>

                <div class="flex gap-2">

                  <a class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white text-center py-2 rounded-lg font-medium transition"
                    href="/bookings/<%= home._id %>">Book</a>

                  <a href="/homes/<%= home._id %> "
                    class="flex-1  bg-indigo-600 hover:bg-indigo-700 text-white text-center py-2 rounded-lg font-medium transition">Details</a>

                  <%- include('partials/fav', { home: home }) %>

                   
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>

    <%- include('partials/footer')%>
</body>

</html>